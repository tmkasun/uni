<div class="container">
	<div class="row">
		<div class="col-md-4">
			<div class="panel panel-info">

				<div class="panel-heading">
					<%= @profile.name%>
				</div>
				<div class="panel-body text-center">

					<div class="col-xs-6 col-md-3">
						<%= image_tag @profile.picture.url(:small),class: "img-rounded img-polaroid"  %>
					</div>

				</div>
			</div>
		</div>

		<div class="col-md-4">
			<div class="modal fade" id="cvModal" tabindex="-1" role="dialog" aria-labelledby="CvLable" aria-hidden="true">
				<div class="modal-dialog">
					<div class="modal-content">
						<div class="modal-header">
							<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
								&times;
							</button>
							<h4 class="modal-title" id="myModalLabel">Curriculum Vitae <small><%= @profile.name %></small></h4>
						</div>
						<div class="modal-body">

							<embed src= <%= @profile.cv.url %> width="100%" height='500'>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">
								Close
							</button>
							<%= link_to 'Download', @profile.cv.url, class: "btn btn-info" %>
						</div>
					</div>
				</div>
			</div>

			<div class="row">
				<div class="input-group">
					<span class="input-group-addon btn-default">First Name</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.common_name.capitalize %>' >
				</div>

			</div>

			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">Full Name</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.name %>' >
				</div>
			</div>
			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">Registration Number</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.registration_number %>' >
				</div>
			</div>

			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">Phone Number</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.phone_number %>' >
				</div>
			</div>

			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">School</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.school.capitalize %>' >
				</div>

			</div>
			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">A/L</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.al_stream.capitalize %>' >
				</div>
			</div>

			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">Gender</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.gender.capitalize %>' >
				</div>
			</div>

			<div class="row">

				<div class="input-group">
					<span class="input-group-addon btn-default">Course</span>
					<input type="text" class="form-control" disabled="true" value= '<%= @profile.degree.upcase %>' >
				</div>

			</div>

			<div class="row">
				
				<div class="input-group has-success ">
					<span class="input-group-addon btn-default">Internship @</span>	
					<input type="text" class="form-control " disabled="true" value= '<%= ( @profile.internship.company_name.capitalize if @profile.internship ) || "Pending" %>' >
				</div>
			</div>

		</div>
		<div class="col-md-4">

		</div>
	</div>

	<% if can? :edit, @profile %>
	<%= link_to "Edit" ,edit_profile_url(@profile.id) , class: "btn btn-inverse" %>

	<button class="btn btn-info" data-toggle="modal" data-target="#cvModal">
		Curriculum Vitae
	</button>
	<% end %>
	<embed style="display: none" src="<%= @profile.cv.url %>" width="80%" height='500'>
</div>