<% if false %>

<%= Internship.count('company_name', :distinct => true) %>
<br />

<%= Internship.group(:company_name).count(:company_name) %>
<% end %>

<div class="container text-center" >
	<div class="row ">
		<div class="col-md-6">

			<%= pie_chart(Internship.group(:company_name).count(:company_name)) %>

		</div>
		<div class="col-md-6">
			<%= pie_chart({"Total applicants" => 203, "Selected" => Internship.count(:id)}) %>
		</div>
	</div>
</div>

</div>

<div class="row">
	<div class="col-md-6" >
		<%= javascript_include_tag "jquery.mCustomScrollbar.concat.min"%>
<script>
    (function($){
        $(window).load(function(){
            $(".list-group").mCustomScrollbar();
        });
    })(jQuery);
</script>

		<div class="list-group" style="max-height: 330px;overflow-y: scroll;">
			<a class="list-group-item active"> Companies who has already accept interns </a>
			<% Internship.select("DISTINCT(company_name)").each do |p| %>

			<a href="#" company_id = "<%= p %>" class="list-group-item"><%= p.company_name %></a>
			<% end %>
		</div>

	</div>
	
	<div class="col-md-6">
		
	</div>

</div>
